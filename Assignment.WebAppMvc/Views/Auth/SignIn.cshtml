@model Assignment.WebAppMvc.Models.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4">

        <div class="justify-content-center text-center">
            <h3 class="m-4">Logga in</h3>
        </div>

        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control shadow" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 ">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control shadow" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Logga in" class="btn btn-dark text-light rounded-pill p-2 mt-3" />
            </div>
        </form>
        <div class="mt-3">
            <p>Har du inget konto?</p>
            <a asp-action="SignUp" class="btn btn-dark text-light rounded-pill p-2">Registrera konto</a>
        </div>

    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
